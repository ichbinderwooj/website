form(name="edit_profile" action="/community/edit-profile" method="post")
    input(type="hidden" name="id", value=userID)
    table 
        tr 
            td 
                label Username
            td 
                input(type="text" name="username" value=username required)
        tr 
            td(colspan="2" class="err-text") 
                if usernameErr 
                    p This username is taken.
        tr 
            td 
                label E-mail 
            td 
                input(type="email" name="email" value=email required)
        tr 
            td(colspan="2" class="err-text")
                if emailErr
                    p This E-mail is taken.
        tr 
            td 
                label Biography
            td 
                .wysiwyg-top
                    table.wysiwyg-table
                        tr 
                            td.wysiwyg-top-style(onclick="Editor.bold()")
                                i.fa.fa-bold
                            td.wysiwyg-top-style(onclick="Editor.italic()")
                                i.fa.fa-italic
                            td.wysiwyg-top-style(onclick="Editor.underline()")
                                i.fa.fa-underline
                            td.wysiwyg-top-style(onclick="Editor.strike()")
                                i.fa.fa-strikethrough
                            td.wysiwyg-top-style(onclick="Editor.code()")
                                i.fa.fa-code
                .wysiwyg-textarea
                    textarea#textarea(name="biography" required rows="20")=content
        tr 
            td 
                label Password 
            td 
                input(type="password" name="password" required)
        tr 
            td(colspan="2" class="err-text")
                if passwordErr
                    p The password is incorrect.
    input(type="submit" value="Edit profile")